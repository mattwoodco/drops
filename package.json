    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.0-rc.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
